<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PaletteItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/xxs_padding</item>
        <item name="android:paddingTop">@dimen/xs_vertical_spacing</item>
        <item name="android:paddingBottom">@dimen/xs_vertical_spacing</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">@dimen/xs_text_size</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
        <item name="android:breakStrategy" tools:targetApi="m">balanced</item>
    </style>

    <style name="TextSample">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/m_horizontal_spacing</item>
        <item name="android:layout_marginEnd">@dimen/m_horizontal_spacing</item>
    </style>

    <style name="TextSample.Inverse">
        <item name="android:layout_marginStart">@dimen/s_horizontal_spacing</item>
        <item name="android:layout_marginEnd">@dimen/s_horizontal_spacing</item>
    </style>

    <style name="ViewSample">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/xs_vertical_spacing</item>
        <item name="android:paddingBottom">@dimen/xs_vertical_spacing</item>
    </style>

    <style name="ViewSample.Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/m_horizontal_spacing</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ViewSample.Description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>
</resources>