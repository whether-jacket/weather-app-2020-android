<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/itemColorViewGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/color_item_height">

    <TextView
            android:id="@+id/colorNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/xs_horizontal_spacing"
            android:layout_marginBottom="@dimen/xs_vertical_spacing"
            android:padding="@dimen/xs_horizontal_spacing"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:background="@color/black"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="aqua" />

    <TextView
            android:id="@+id/colorHexValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/xs_horizontal_spacing"
            android:layout_marginTop="@dimen/xs_vertical_spacing"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:background="@color/black"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="#FEFEFE" />
</androidx.constraintlayout.widget.ConstraintLayout>