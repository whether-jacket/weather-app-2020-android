<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
        Theme attrs: https://material.io/design/color/the-color-system.html#color-theme-creation
    -->
    <style name="Theme.Droid" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/droidPrimary</item>
        <item name="colorPrimaryVariant">@color/droidPrimaryDark</item>
        <!-- Secondary -->
        <item name="colorSecondary">@color/droidAccent</item>
        <!-- Custom attributes defined in attrs.xml -->
        <item name="themeName">@string/theme_name_droid</item>
        <item name="themeDescription">@string/theme_desc_droid</item>
        <!-- Dialogs -->
        <item name="alertDialogTheme">@style/DialogThemeLight</item>
        <item name="android:dialogTheme">@style/DialogThemeLight</item>
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
    </style>

    <style name="Theme.Illini" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/illiniColorPrimary</item>
        <item name="colorPrimaryVariant">@color/illiniColorPrimaryDark</item>
        <item name="colorOnPrimary">@color/illiniTextColorPrimary</item>
        <!-- Secondary -->
        <item name="colorSecondary">@color/illiniColorAccent</item>
        <item name="colorOnSecondary">@color/illiniTextColorPrimaryInverse</item>
        <!--  Surface  -->
        <item name="colorSurface">@color/illiniBackground</item>
        <!--  Background  -->
        <item name="backgroundColor">@color/illiniBackground</item>
        <item name="android:background">@color/illiniBackground</item>
        <item name="android:colorBackground">@color/illiniBackground</item>
        <!-- Error  -->
        <item name="errorTextColor">@color/illiniInputError</item>
        <!-- StatusBar -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:colorForeground">@color/illiniForeground</item>
        <!-- Text Appearance styles -->
        <item name="android:textViewStyle">@style/TextViewStyle.Condensed</item>
        <item name="android:textColorPrimary">@color/illiniTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/illiniTextColorSecondary</item>
        <item name="android:textColorTertiary">@color/illiniTextColorTertiary</item>
        <item name="android:textColorLink">@color/illiniTextColorLink</item>
        <item name="android:textColorHint">@color/illiniTextColorTertiary</item>
        <item name="android:textColorPrimaryInverse">@color/illiniTextColorPrimaryInverse</item>
        <item name="android:textColorSecondaryInverse">@color/illiniTextColorSecondaryInverse</item>
        <item name="android:textColorTertiaryInverse">@color/illiniTextColorTertiaryInverse</item>
        <item name="android:textColorLinkInverse">@color/illiniTextColorLinkInverse</item>
        <item name="android:textColorHintInverse">@color/illiniTextColorTertiaryInverse</item>
        <!-- Custom attributes defined in attrs.xml -->
        <item name="themeName">@string/theme_name_illini</item>
        <item name="themeDescription">@string/theme_desc_illini</item>
        <item name="icon_foreground_color">@color/illiniForeground</item>
        <item name="dividerColor">@color/illiniDividerColor</item>
        <item name="tabLayoutStyle">@style/TabStyle.Dark</item>
        <!-- Input Layout -->
        <item name="input_layout_text_edit_color">@color/illiniTextColorPrimary</item>
        <item name="input_layout_error_color">@color/illiniInputError</item>
        <item name="input_layout_hint_active_color">@color/illiniActiveHint</item>
        <item name="input_layout_hint_inactive_color">@color/illiniInactiveHint</item>
        <!-- Dialogs -->
        <item name="alertDialogTheme">@style/DialogThemeDark</item>
        <item name="android:dialogTheme">@style/DialogThemeDark</item>
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
    </style>

