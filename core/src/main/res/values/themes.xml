    <style name="Theme.Droid" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/droidPrimary</item>
        <item name="colorPrimaryDark">@color/droidPrimaryDark</item>
        <item name="colorAccent">@color/droidAccent</item>
        <!-- Custom attributes defined in attrs.xml -->
        <item name="themeName">@string/theme_name_droid</item>
        <item name="themeDescription">@string/theme_desc_droid</item>
        <!-- Dialogs -->
        <item name="alertDialogTheme">@style/DialogThemeLight</item>
        <item name="android:dialogTheme">@style/DialogThemeLight</item>
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
