<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?themePrimary</item>
        <item name="colorPrimaryDark">?themePrimaryDark</item>
        <item name="colorAccent">?themeAccent</item>
    </style>

    <style name="AppTheme.Droid">
        <item name="themePrimary">@color/droid_green</item>
        <item name="themePrimaryDark">@color/droid_dark_green</item>
        <item name="themeAccent">@color/droid_pink</item>
        <item name="themeContentBackground">@color/white</item>
        <item name="themeContentTextColor">@color/black</item>
        <item name="themeContentTextColoOnPrimary">@color/white</item>
        <item name="themeContentTextColorInactive">@color/gray</item>
        <item name="themeTextColorSuccess">@color/green</item>
        <item name="themeTextColorFailure">@color/red</item>
    </style>

    <style name="AppTheme.Indigo">
        <item name="themePrimary">@color/blue</item>
        <item name="themePrimaryDark">@color/dark_blue</item>
        <item name="themeAccent">@color/light_blue</item>
        <item name="themeContentBackground">@color/white</item>
        <item name="themeContentTextColor">@color/black</item>
        <item name="themeContentTextColoOnPrimary">@color/white</item>
        <item name="themeContentTextColorInactive">@color/gray</item>
        <item name="themeTextColorSuccess">@color/green</item>
        <item name="themeTextColorFailure">@color/red</item>
    </style>

    <style name="AppTheme.Pink">
        <item name="themePrimary">@color/pink</item>
        <item name="themePrimaryDark">@color/deep_pink</item>
        <item name="themeAccent">@color/hot_pink</item>
        <item name="themeContentBackground">@color/white</item>
        <item name="themeContentTextColor">@color/black</item>
        <item name="themeContentTextColoOnPrimary">@color/white</item>
        <item name="themeContentTextColorInactive">@color/gray</item>
        <item name="themeTextColorSuccess">@color/green</item>
        <item name="themeTextColorFailure">@color/red</item>
    </style>

    <!-- Input Layout/Text -->
    <style name="MyStyle.InputLayout" parent="Widget.Design.TextInputLayout">
        <!--<item name="fontPath">@string/app_font</item>-->
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
    </style>

    <style name="MyTheme.EditText" parent="Theme.AppCompat.Light">
        <!-- Inactive underline color-->
        <item name="colorControlNormal">@color/hint_color_inactive</item>

        <!-- Cursor and Active underline color, uses colorAccent by default if not defined-->
        <item name="colorControlActivated">@color/hint_color_active</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <!-- Inactive and Active label color, pointing to a selector-->
        <item name="android:textColor">@color/hint_color</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.Design.Error">
        <!-- Error text color-->
        <item name="android:textColor">@color/error_color</item>
    </style>


</resources>
